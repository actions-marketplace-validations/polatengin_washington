{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build CLI",
      "type": "process",
      "command": "dotnet",
      "args": [
        "build",
        "${workspaceFolder}/src/cli/cli.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch",
      "type": "process",
      "command": "dotnet",
      "args": [
        "watch",
        "run",
        "${workspaceFolder}/src/cli/cli.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "vscode-extension-compile",
      "type": "npm",
      "script": "compile",
      "path": "src/vscode-extension",
      "group": "build",
      "problemMatcher": [],
      "detail": "webpack"
    }
  ]
}
